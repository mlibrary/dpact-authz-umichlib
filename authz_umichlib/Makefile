##
##  Makefile -- Build procedure for sample authz_umichlib Apache module
##  Autogenerated via ``apxs -n authz_umichlib -g''.
##

builddir=.
top_srcdir=/opt/bitnami/apache
top_builddir=/opt/bitnami/apache
include /opt/bitnami/apache/build/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_authz_umichlib.o mod_authz_umichlib.lo mod_authz_umichlib.slo mod_authz_umichlib.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/authz_umichlib

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

